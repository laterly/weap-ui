/* element.wxss */
.comp-top {
  height: 250rpx;
  /* background-color: #08c261; */
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
  padding-left: 36rpx;
  box-sizing: border-box;
  background: linear-gradient(to bottom, #08c261 0%,#07b159 50%,#07b159 100%);
}

.page_title {
  display: flex;
  align-items: center;
  justify-content: center;
  /* padding: 70rpx 0 30rpx 0; */
}


.comp-title {
  font-size: 64rpx;
  padding-left: 20rpx;
  color: #333;
  position: relative
}

.tui-badge {
  position: absolute;
  width: 80rpx;
  height: 30rpx;
  border-radius: 30rpx 30rpx 30rpx 0;
  color: #fff;
  background: #eb0909;
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8) translateX(100%);
  transform-origin: center center;
  top: -8rpx;
  right: 0;
}

.page_desc {
  color: #666;
  font-size: 28rpx;
  text-align: center;
}


.comp-content {
  width: 94%;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  top: -60rpx;
  margin: 0 auto;
  border-radius: 5px;
  overflow: hidden;
}

.comp-content-title {
  height: 100rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 1);
  align-items: center;
  display: flex;
  padding-left: 40rpx;
  position: relative;
}
.comp-content-title::before{
  position: absolute;
  content: "";
  width: 8rpx;
  height: 30rpx;
  background-color: #08C261;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}