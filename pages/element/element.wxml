<view class="comp">
    <view class="comp-top">
        <view class="page_title">
            <view class="comp-title">
                Weapp UI
                <view class="tui-badge">v1.0.0</view>
            </view>
        </view>
        <view class="page_desc">封装一套原生微信小程序UI库组件</view>
    </view>
    <view class="comp-content">
        <view class="comp-content-title">元素库演示</view>
        <list title="List 列表" is-link="{{true}}" left-icon="/images/bottom-icon2.png" data-page="/pages/element/list/list" catchtap="toPage"></list>
        <list title="Icon 图标" is-link="{{true}}" left-icon="/images/button-icon.png" data-page="/pages/element/icon/icon" catchtap="toPage"></list>
        <!-- <list title="Grid 宫格" is-link="{{true}}" left-icon="/images/bottom-icon2.png" data-page="/pages/element/grid/grid" catchtap="toPage"></list> -->
