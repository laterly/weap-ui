         <list title="Empty 空状态" is-link="{{true}}" left-icon="/images/button-icon.png" data-page="/pages/element/empty/empty" catchtap="toPage"></list>
        <list title="Mask 遮罩层" is-link="{{true}}" left-icon="/images/button-icon.png" data-page="/pages/element/mask/mask" catchtap="toPage"></list>
        <list title="Divider 分割线" is-link="{{true}}" left-icon="/images/button-icon.png" data-page="/pages/element/divider/divider" catchtap="toPage"></list>
        <list title="Loading 加载" is-link="{{true}}" left-icon="/images/button-icon.png" data-page="/pages/element/loading/loading" catchtap="toPage"></list>
    </view>
</view>