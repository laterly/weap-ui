/* components/card/card.wxss */
.card-box {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 20rpx 30rpx 20rpx 30rpx;
  background-color: #fff;
}

.card-content {
  position: relative;
  display: flex;
  align-items: flex-start;
}

.goods-pic-container {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.goods-pic {
  width: 100%;
  height: 100%;
  display: block;
  background: #f7f7f7;
}
.goods-pic-tag{
height: 34rpx;
background: #ff8e29;
display: flex;
align-items: center;
justify-content: center;
padding: 0 23rpx 0 18rpx;
border-radius: 0 20rpx 0 0;
position: absolute;
left: 0;
bottom: 0;
font-size: 22rpx;
font-weight: 400;
text-align: center;
color: #ffffff;
}
.goods-content-box {
  min-height: 200rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.goods-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  -webkit-line-clamp: 2;
}
.goods-intro{
  font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #999;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 1;
-webkit-box-orient: vertical;
word-break: break-all;
margin-top: 18rpx;
}
.goods-tag-box {
  display: flex;
  align-items: center;
  margin-top: 18rpx;

}

.goods-tag-box .goods-tag {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  height: 30rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #333;
  margin-right: 10rpx;
  max-width: 250rpx;
  -webkit-line-clamp: 1;
  line-height: 30rpx;
  padding: 2rpx 10rpx;
  text-align: center;
}

.price-box {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
  line-height: 1;
  margin-top: 18rpx;
}

.price {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  max-width: 250rpx;
  line-height: 1.2;

}

.price-text {
  font-size: 34rpx;
  color: #ff4317;
  font-weight: 700;

}
.proice-dis{
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.price-text:fitst-letter {
  font-size: 24rpx;
  color: #ff4317;
  font-weight: 400;
}

.amount-box{
  box-sizing: border-box;
  padding: 24rpx;
  position: absolute;
  right: -24rpx;
  bottom: -24rpx;
  font-size: 24rpx;
  color: #999;
}
.flex1{
  flex: 1;
}
.card-box:active{
  background: #f5f5f5;
}
