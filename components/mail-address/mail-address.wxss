.delivery-address {
  background: #fff
}
.delivery-address:active{
  background: #f5f5f5;
}
.delivery-address .address-row {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 28rpx 0;
}

.delivery-address .address-row .address-icon {
  width: 99rpx;
  display: flex;
  align-items: center;
  justify-content: center
}

.delivery-address .address-row .address-icon .address-img {
  width: 32rpx;
  height: 41rpx;
  object-fit: cover
}

.delivery-address .address-row .address-center {
  display: flex;
  flex-direction: column;
  width: 560rpx
}

.delivery-address .address-row .address-center .info {
  font-size: 32rpx;
  font-weight: 400;
  color: #000
}

.delivery-address .address-row .address-center .address {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
  line-height: 35rpx
}

.delivery-address .address-row .address-select {
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  padding-right: 30rpx
}

.delivery-address .address-row .address-select .next-img {
  width: 14rpx;
  height: 24rpx;
  object-fit: cover
}

.delivery-address .address-bottom {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 8rpx
}

.delivery-address .address-bottom .bottom-icon {
  width: 100%;
  height: 8rpx;
  padding: 0;
  margin: 0;
  display: inline
}

.flex1 {
  flex: 1
}

.text-eli-line2 {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2
}