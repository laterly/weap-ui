/* components/submit-bar/submit-bar.wxss */
.bottom-cart {
  border-top: 2rpx rgba(237, 237, 237, .6) solid;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  min-height: 102rpx;
  display: flex;
  align-items: center;
  z-index: 99
}

.bottom-cart .left,
.bottom-cart .left .total-num {
  font-size: 28rpx;
  font-weight: 400;
  align-items: center
}

.bottom-cart .left {
  width: 420rpx;
  justify-content: flex-end;
  color: #333;
  box-sizing: border-box;
  padding-right: 30rpx
}

.bottom-cart .left .total-num {
  height: 100%;
  display: flex;
  color: #999
}

.bottom-cart .left .total-price {
  font-size: 44rpx;
  font-weight: 700;
  color: #ff8e29
}

.bottom-cart .left .total-price .price-unit {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff8e29
}

.bottom-cart .left .total-price,
.bottom-cart .right {
  align-items: center;
  height: 100%;
  display: flex
}

.bottom-cart .right .result-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  border-radius: 100px;
  background-color: #08c261;
}
.flex{
  display: flex;
}
.bottom-cart .right .result-btn:active{
  opacity: 0.9;
}