.bottom-btn {
  min-width: 52px;
  min-height: 108rpx;
  font-size: 22rpx;
  color: #666;
  flex-direction: column;
  position: relative;
  line-height: 1.4;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
}

.bottom-btn-icon {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.icon-tag {
  position: absolute;
  top: 0;
  right: 0;
  box-sizing: border-box;
  min-width: 16px;
  padding: 0 2px;
  color: #fff;
  font-weight: 500;
  font-size: 22rpx;
  line-height: 1.2;
  text-align: center;
  background-color: #ee0a24;
  border: 1px solid #fff;
  border-radius: 16px;
  -webkit-transform: translate(50%, -50%);
  transform: translate(50%, -50%);
  -webkit-transform-origin: 100%;
  transform-origin: 100%;
}
.icon-tag-dot{
  position: absolute;
  top: 0;
  right: 0;
  box-sizing: border-box;
  padding: 2px;
  color: #fff;
  font-weight: 500;
  font-size: 22rpx;
  line-height: 1.2;
  text-align: center;
  background-color: #ee0a24;
  border: 1px solid #fff;
  border-radius: 16px;
  -webkit-transform: translate(50%, -50%);
  transform: translate(50%, -50%);
  -webkit-transform-origin: 100%;
  transform-origin: 100%;
}
.rel{
  position: relative;
}
