/* button.wxss */
.button{
    width: 100%;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #08c261;
    border-radius: 5px;
    font-size:32rpx;
    font-weight:700;
    color:rgba(255,255,255,1); 
}
.default-btn {
    padding: 0;
    margin: 0;
    border-radius: 0;
}
  
.default-btn::after {
    border: none;
    padding: 0;
    margin: 0;
    background: none;
}