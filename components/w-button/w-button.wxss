/* button.wxss */
.button {
    width: 100%;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    font-size: 32rpx;
    font-weight: 700;
}

.default-btn {
    padding: 0;
    margin: 0;
}

.default-btn::after {
    border: none;
    padding: 0;
    margin: 0;
    background: none;
}


.button.default{
    background: #08c261;
    color: rgba(255, 255, 255, 1);
}
.button.secondary {
    background: rgba(247, 247, 247, 1) !important;
    color: #08c261!important;
}
.button.round {
    border-radius: 100px;
}

.button.small {
    height: 30px!important;
    font-size: 12px!important;
  }
  
.button.mini {
    height: 25px!important;
    font-size: 12px!important;
  }